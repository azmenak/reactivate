.u-grid
  box-sizing border-box

  .u-left,
  .u-right
    float left
    box-sizing border-box

    @media (max-width: 767px)
      float none

  // Menu has 7 sections
  // align to end of first 2
  left-width = ((100/7)*2)%

  .u-left
    width left-width
    padding-right 5%
    @media (max-width: 767px)
      width 100%

  .u-right
    width 100% - left-width
    @media (max-width: 767px)
      width 100%
