table.responsive
  width 100%
  border-collapse collapse

  padding = 6px

  th, td
    &:first-child
      text-align left
  th, td
    text-align center
    padding padding
    border 1px solid #CCC
    &.corner
      color #CCC

  &.A
    td:nth-child(1)
      display none

  @media screen and (max-width: 630px)
    &, thead, tbody, th, td, tr
      display block

    thead tr
      position absolute
      top -9999px
      left -9999px

    tr
      border 1px solid #CCC
    th
      text-align center !important
    td, th
      border none
      border-bottom 1px solid #EEE
      position relative
      padding-left 50%

      &:before
        position absolute
        top padding
        left padding
        width 45%
        padding-right 10px
        white-space nowrap
        text-align left
        font-weight bold

    &.larch
      td
        &:nth-of-type(1):before
          content 'Janka Hardness'
        &:nth-of-type(2):before
          content 'Density'
        &:nth-of-type(3):before
          content 'Bending'
    &.product-specs
      td
        &:before
          text-align right
        &:nth-of-type(1):before
          content 'A'
        &:nth-of-type(2):before
          content 'AB'
        &:nth-of-type(3):before
          content 'ABC'
        &:nth-of-type(4):before
          content 'ABCD'

      td, th
        padding-left 30%
        text-align left !important
        &:before
          width 20%
