.products-page
  .product-chooser
    product-breakpoint = 523px
    .sublime-left, .ee-right
      overflow hidden
      margin-bottom 20px
      width 47.5%
      float left
      @media (max-width: product-breakpoint)
        width 100%
        float none
    .ee-right
      margin-left 5%
      @media (max-width: product-breakpoint)
        margin-left 0

    .selection-box
      position relative
      transform scale(1)
      transition transform 0.2s ease-out
      @media (min-width: 678px)
        &:hover
          .can-hover &
            transform scale(1.03)

      h3
        position absolute
        color white
        font-weight 300
        font-size 40px
        left 40px
      img
        max-width 100%


.products
  .product
    .banner
      cursor pointer
      position relative
      overflow hidden

      &:hover
        .can-hover &
          .banner-text
            background-color rgba(0,0,0,0.4)
            p.click-to-expand
              opacity 1
          img
            transform scale(1.05)

      .banner-text
        position absolute
        bottom 0
        width 100%
        z-index 10
        .can-hover &
          background-color rgba(0,0,0,0)
          transition background-color 0.3s ease-out
        h3
          margin 20px
          padding 8px 14px
          background #FFF
          float left
          font-size 24px
        p.click-to-expand
          text-align right
          color #FFF
          font-size 24px
          font-weight 200
          margin-right 20px
          margin-top 26px
          opacity 0
          transition opacity 0.3s ease-out
          .touch-events &
            display none
      img
        max-width 100%
        margin-bottom -5px
        z-index 9
        transform scale(1)
        transition transform 0.5s ease-out

    .large-img
      position fixed
      width 100%
      height 100%
      top 0
      left 0
      padding 15px
      box-sizing border-box
      z-index 100

      time = 0.3s
      trans = opacity time ease-out, transform time ease-out
      transition visibility 0s linear, trans
      visibility hidden
      opacity 0
      transform scale(0.9)
      &.shown
        visibility visible
        opacity 1
        transform scale(1)
      &:hover
        addDelays(args)
          buf = ''
          buf += i ? ', 0s' : '0s' for t,i in args
        transition-delay: time, unquote(addDelays(trans))

      .container-box
        position relative
        margin 0 auto
        top 50%
        transform translateY(-50%)
        overflow hidden
        width 100%
        max-width 1024px
        max-height 96%
        box-shadow 0px 3px 20px 0px
        img
          max-width 100%
          margin-bottom -5px
