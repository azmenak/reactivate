@import 'bootstrap/variables'

@import 'bootstrap/mixins/buttons'
@import 'bootstrap/buttons'

@import 'bootstrap/forms'

@import '_utils'
@import '_settings'
@import '_*'

normalize-css()
base()

body
  padding 50px
  max-width 1100px
  margin 0 auto

  @media (max-width: 767px)
    padding 10px

  .frame
    clearfix()

.urbania-type, .urbania-type-wide
  font-family arial narrow, arial
  font-weight 600

.urbania-type-wide
  letter-spacing 0.1em

h2
  font-weight 100
  font-size 48px

.banner
  margin-top 24px
  img
    max-width 100%

a.btn
  text-decoration none
