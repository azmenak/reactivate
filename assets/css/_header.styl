menu-breakpoint = 800px

header.main-header
  .logo
    img
      width 100%

  nav.main-menu
    clearfix()

    ul.menu-items
      padding 0
      position relative

      li.menu-item
        display block
        float left
        width (100/7)%
        text-align center

        @media (max-width: menu-breakpoint)
          width 100%

        background-color u-gray
        &:nth-child(1)
        &:nth-child(3)
        &:nth-child(7)
          background-color u-green
          li.menu-item
            background-color: u-green
        &:nth-child(2)
        &:nth-child(5)
          background-color u-orange
          li.menu-item
            background-color: u-orange

        a
          color white
          text-decoration none
          font-size 12px
          display block
          padding: 5px 5px

        &:hover
          background-color #333 !important

          ul.sub-menu
            visibility visible

        ul.sub-menu
          position absolute
          z-index 50
          visibility hidden

          li.menu-item
            float none
            width auto
            text-align left
